docker.enabled         = true
docker.userEmulation   = true

//option to make it run on mac with M1/M2 processor
docker.runOptions = '--platform linux/amd64'

params {

//Assets will be stored in S3
snps_ref = "$PWD/ref_files/SNPs/SNPs.1e5.txt"
align_ref = "$PWD/ref_files/hg19/hg19.fa"
gtf_ref = "$PWD/ref_files/hg19/gencode.v19.annotation.gtf"
DAC_Exclusion = "$PWD/ref_files/hg19/DAC_Exclusion.bed"
genes_pileup_report = "$PWD/ref_files/pileup_report/test_housekeeping.bed"
states_ref = "$PWD/ref_files/states"

//Code will be stored in github
pathEnrichmentScript = "${projectDir}/auxiliar_programs/enrichment.sh"
pathRfrag_plotFragDist = "${projectDir}/auxiliar_programs/frag_plotFragDist.R"
pathRComparison = "${projectDir}/auxiliar_programs/pileups_comparison.R"
pathRPileups = "${projectDir}/auxiliar_programs/read_pileups.R"
pathJson_file = "${projectDir}/auxiliar_programs/cfchip.json"

samples = "$PWD/local-sample.csv"


threads = 5
queue = 'short'
}